<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#333333</item>
        <!-- Default Status Bar Color for All The App. -->
        <item name="android:statusBarColor">@color/app_bg</item>
        <!-- Default Status Bar Text Color for All The App. {light color=false} or {dark color=true} -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Default Background color for all the app. -->
        <item name="android:windowBackground">@color/app_bg</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splashscreen_bg</item>
        <item name="android:background">@drawable/background_splash</item>
    </style>

</resources>